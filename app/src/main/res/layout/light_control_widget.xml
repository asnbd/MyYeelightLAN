<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lc_widget_background"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.MyYeelightLAN.AppWidgetContainer"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/w_btn_on"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lc_widget_btn_background"
        android:tint="@color/lc_widget_btn_icon_tint"
        android:src="@drawable/ic_light_bulb_on"
        android:padding="20dp"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/w_btn_off"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lc_widget_btn_background"
        android:tint="@color/lc_widget_btn_icon_tint"
        android:layout_marginStart="1dp"
        android:src="@drawable/ic_light_bulb_off"
        android:paddingStart="23dp"
        android:paddingEnd="23dp"
        android:paddingTop="7dp"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/w_btn_dim"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lc_widget_btn_background"
        android:tint="@color/lc_widget_btn_icon_tint"
        android:layout_marginStart="1dp"
        android:src="@drawable/ic_baseline_brightness_4_64"
        android:padding="20dp"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/w_btn_bright"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lc_widget_btn_background"
        android:tint="@color/lc_widget_btn_icon_tint"
        android:layout_marginStart="1dp"
        android:src="@drawable/ic_baseline_brightness_7_24"
        android:padding="20dp"
        android:scaleType="centerInside"/>

</LinearLayout>